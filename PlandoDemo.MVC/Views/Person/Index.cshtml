@model IEnumerable<PlandoDemo.MVC.Models.Person>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <a asp-controller="Person" asp-action="AddPerson" class="btn btn-primary m-5"><i class="bi bi-plus-circle-fill text-white"></i></a>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-4">
                <div class="card p-3">
                    @item.Id
                    <div class="card-title border m-1 p-3">
                        @item.Name
                    </div>
                    <div class="lead card-text border m-1 p-3">
                        @item.Address
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Person" asp-action="Update" asp-route-id="@item.Id" as class="btn btn-outline-secondary m-2 p-2" >Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
